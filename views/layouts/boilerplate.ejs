  <body>
    <!-- Header -->
    <header>
      <nav
        class="navbar navbar-expand-lg navbar-light bg-white fixed-top"
        style="height: 80px"
      >
        <div class="container-fluid bg-white">
          <!-- Logo -->
          <a class="navbar-brand fw-bold fs-3" href="/listings">
            <img src="/images/logo.png" alt="logo" style="height: 65px" />
          </a>

          <!-- Toggler for small screens -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Collapsible Menu -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Centered Search Box -->
            <div
              class="d-flex w-100 justify-content-between align-items-center"
            >
              <form
                class="d-flex mx-auto"
                style="max-width: 450px; width: 100%"
              >
                <div class="input-group">
                  <input
                    type="text"
                    class="form-control rounded-pill"
                    placeholder="Search listings..."
                    style="
                      border-radius: 50px;
                      border: 1px solid #ddd;
                      padding-left: 15px;
                      height: 38px;
                    "
                  />
                  <button
                    type="submit"
                    class="btn position-absolute"
                    style="
                      right: 10px;
                      top: 35%;
                      transform: translateY(-50%);
                      background: transparent;
                      border: none;
                      box-shadow: none;
                      color: #333;
                    "
                  >
                    <i class="fa fa-search"></i>
                  </button>
                </div>
              </form>
            </div>

            <!-- Right Section -->
            <ul class="navbar-nav ms-auto align-items-center">
              <!-- New Listing -->
              <li class="nav-item">
                <a
                  class="nav-link"
                  href="/listings/new"
                  style="width: max-content"
                  >YOUR HOME</a
                >
              </li>

              <!-- Authentication Links -->
              <% if (currentUser==undefined) { %>
              <li class="nav-item">
                <a class="nav-link fw-bold" href="/users/signup">Signup</a>
              </li>
              <li class="nav-item">
                <a class="nav-link fw-bold" href="/users/login">Signin</a>
              </li>
              <% } else { %>
              <li class="nav-item">
                <a class="nav-link fw-bold" href="/users/logout">Logout</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

